  "backtesting": {
    "enabled": true,
    "start_date": "2020-01-01",
    "end_date": "2024-12-31",
    "initial_capital": 100000,
    "commission_bps": 5,
    "slippage_bps": 2,
    "benchmark_symbol": "SPY",
    "risk_free_rate": 0.02,
    "rebalance_frequency": "daily",
    "position_sizing": {
      "method": "kelly_criterion",
      "max_position_size": 0.1,
      "min_position_size": 0.01
    }
  }
