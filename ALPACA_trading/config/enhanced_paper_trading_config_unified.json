  "initial_capital": 100000,
  "use_ibkr": true,
  "shorting_enabled": true,
  "close_positions_at_end": false,
  "carry_positions_from_warmup": false,
  "fast_mode": false,
  "mode": "paper",
  "strategy": "regime_aware_ensemble",
  "risk_params": {
    "max_gross_exposure_pct": 35.0,
    "max_daily_loss_pct": 1.0,
    "max_position_size_pct": 10.0,
    "stop_loss_pct": 2.0,
    "take_profit_pct": 4.0,
    "max_leverage": 1.0,
    "max_correlation": 0.7
  },
  "execution_params": {
    "slippage_bps": 2,
    "per_share_fee": 0.005,
    "borrow_rate_annual": 0.06,
    "commission_bps": 5,
    "min_trade_size": 100
  },
  "ibkr_config": {
    "paper_trading": true,
    "host": "127.0.0.1",
    "port": 7497,
    "client_id": 12399,
    "timeout": 20,
    "max_retries": 3
  },
  "data_config": {
    "use_cache": true,
    "fallback_to_yfinance": true,
    "cache_dir": "data/ibkr",
    "default_duration": "1 Y",
    "default_bar_size": "1 day",
    "min_history_days": 252,
    "warmup_days": 200
