  "kill_switches": {
    "enabled": true,
    "max_daily_loss_pct": 2.0,
    "max_daily_loss_dollars": 2000,
    "max_drawdown_pct": 10.0,
    "max_position_size_pct": 20.0,
    "max_sector_exposure_pct": 30.0
