  "logging": {
    "level": "INFO",
    "file_rotation": true,
    "max_file_size": "10MB",
    "backup_count": 5,
    "log_dir": "logs",
    "trading_log_file": "logs/trading_bot.log",
    "system_log_file": "logs/system/system.log",
    "performance_log_file": "logs/performance/performance.log",
    "trades_log_file": "logs/trades/trades.log",
    "errors_log_file": "logs/errors/errors.log"
  },
  "notifications": {
    "discord_enabled": false,
    "webhook_url": "",
    "bot_name": "Trading Bot",
    "notification_level": "INFO",
    "daily_summary": true,
    "trade_alerts": true,
    "error_alerts": true
  },
  "performance_tracking": {
    "save_results": true,
    "results_dir": "results",
    "daily_summaries": true,
    "trade_logging": true,
    "metrics_calculation": {
      "sharpe_ratio": true,
      "max_drawdown": true,
      "calmar_ratio": true,
      "sortino_ratio": true,
      "win_rate": true,
      "profit_factor": true
    },
    "reporting": {
      "daily_reports": true,
      "weekly_reports": true,
      "monthly_reports": true,
      "performance_dashboard": true
    }
  },
  "telemetry": {
    "enabled": true,
    "snapshot_interval_minutes": 15,
    "metrics_collection": {
      "portfolio_metrics": true,
      "system_metrics": true,
      "performance_metrics": true,
      "risk_metrics": true
    },
    "alerting": {
      "high_cpu_usage": 80,
      "high_memory_usage": 80,
      "disk_space_warning": 90,
      "connection_timeout": 30
    }
  },
  "feature_engineering": {
    "enabled": true,
    "feature_cache": true,
    "cache_dir": "results/features",
    "feature_groups": {
      "trend_features": true,
      "momentum_features": true,
      "mean_reversion_features": true,
      "volatility_features": true,
      "volume_features": true,
      "regime_features": true
    },
    "feature_selection": {
      "method": "correlation",
      "threshold": 0.8,
      "max_features": 50
    }
  },
  "walk_forward": {
    "enabled": true,
    "train_days": 252,
    "test_days": 63,
    "stride_days": 21,
    "warmup_days": 50,
    "min_test_days": 30,
    "validation_method": "time_series_split",
    "metric_optimization": "sharpe_ratio",
    "ensemble_method": "weighted_average"
